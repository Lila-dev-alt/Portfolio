{% extends 'base.html.twig' %}

{% block title %}Education index{% endblock %}

{% block body %}
    <h1 class="text-center mt-3">Liste de mes formations</h1>
    <a class="btn bg-light ml-5" href="{{ path('education_new') }}">Creer une formation</a>
<div class="container m-auto d-flex justify-content-center">
    <table class="table table-hover mt-5">
        <thead class="bg-primary">
            <tr>
                <th class="text-white">Ecole</th>
                <th class="text-white">Diplôme</th>
                <th class="text-white">Description</th>
                <th class="text-white">Domaine d'études</th>
                <th class="text-white">Temps d'études</th>
                <th class="text-white">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for education in education %}
            <tr>
                <td>{{ education.school }}</td>
                <td>{{ education.degree }}</td>
                <td>{{ education.description }}</td>
                <td>{{ education.fieldOfStudy }}</td>
                <td>{{ education.numberOfyear }}</td>
                <td>
                    <a class="btn bg-warning" href="{{ path('education_show', {'id': education.id}) }}">Voir</a>
                    <a class="btn bg-primary text-white mt-1" href="{{ path('education_edit', {'id': education.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}

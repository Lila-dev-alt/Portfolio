{% extends 'base.html.twig' %}

{% block title %}Skill{% endblock %}

{% block body %}
    <h1 class="text-center mt-3">Compétence</h1>
<div class="container d-flex justify-content-center w-50">
    <table class="table table-hover mt-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skill.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ skill.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img-admin" src="{{ skill.image }}" alt="photo"></td>
            </tr>

        </tbody>
    </table>
</div>
<div class="bouttons d-flex justify-content-between mt-5 m-auto w-50 p-3">
    <a class="text-dark btn bg-warning" href="{{ path('skill_index') }}">Retour à la liste</a>

    <a class="text-white btn btn-primary" href="{{ path('skill_edit', {'id': skill.id}) }}">Editer</a>

    {{ include('skill/_delete_form.html.twig') }}
</div>
{% endblock %}

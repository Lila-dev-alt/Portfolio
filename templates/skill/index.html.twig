{% extends 'base.html.twig' %}

{% block title %}Skill index{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Portfolio Section Heading-->
    <h2 class="page-section-heading text-center text-uppercase text-secondary ">Liste de compétences</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
    </div>
    <a class="btn bg-light ml-5" href="{{ path('skill_new') }}">Créer une nouvelle</a>
<div class="container m-auto d-flex justify-content-center">


    <table class=" table table-hover mt-5">
        <thead class="bg-warning">
            <tr>
                <th>Nom</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td class="">{{ skill.name }}</td>
                <td><img class="img-admin" src="{{ skill.image }}" alt="image of skill" ></td>
                <td>
                    <a class="btn bg-warning" href="{{ path('skill_show', {'id': skill.id}) }}">Voir</a>
                    <a class="btn bg-primary text-white mt-1" href="{{ path('skill_edit', {'id': skill.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>



{% endblock %}
